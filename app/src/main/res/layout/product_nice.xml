<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="200dp">

    <TextView
        android:id="@+id/text_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/button_pen"
        android:layout_marginRight="190dp"
        android:text="@string/long_text"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_product"
        android:layout_toLeftOf="@id/button_pen"
        android:layout_marginRight="10dp"
        android:text="@string/date1"
        android:textSize="16dp" />

    <ImageButton
        android:id="@+id/button_pen"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/button_bin"
        android:background="@drawable/pencil" />

    <ImageButton
        android:id="@+id/button_bin"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bin" />


</RelativeLayout>